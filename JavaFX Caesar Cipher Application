package calculatorcc;

/*
 * @author: Peagan Mitchell 
 * Date : 01/18/2023
 */
import javafx.application.Application;
import static javafx.application.Application.launch;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.HBox;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

/**
 *
 * @author: Peagan Mitchell Date : 01/18/2023
 */
public class CalculatorCC extends Application {

    private int result = 0;

    @Override
    public void start(Stage primaryStage) {

        Label titleLabel = new Label("\nADDING EXAMPLE");
        Label numberLabel = new Label("Number:");
        TextField numberTF = new TextField();
        numberTF.setPrefWidth(80);
        Label resultLabel = new Label("Result: ");

        Button addBTN = new Button("   ADD   ");
        addBTN.setOnAction(e -> {
            String inputNumber = numberTF.getText();
            System.out.println("Number = " + inputNumber);
            int amt = getInt(inputNumber, resultLabel);
            if (amt > 0)    {
            System.out.println("Amount = " + amt);
            result = result + amt;
            resultLabel.setText("Result = " + result);
            numberTF.clear();
            }
            numberTF.requestFocus();

            /*
            String theText1 = f1.getText();
            System.out.println("Secret Message: " + theText1);
            f1.clear();
             */
        });
        Button clearBTN = new Button("   Clear   ");
        clearBTN.setOnAction(e -> {
            numberTF.clear();
            resultLabel.setText("");
            numberTF.requestFocus();
        });

        HBox numberHbox = new HBox(25);
        numberHbox.getChildren().addAll(numberLabel, numberTF);

        HBox buttonHbox = new HBox(25);
        buttonHbox.getChildren().addAll(addBTN, clearBTN);

        VBox vbox = new VBox(20);
        vbox.getChildren().addAll(titleLabel, numberHbox, buttonHbox, resultLabel);
        /* vbox.setMargin(numberHbox, new Insets(5, 0, 0, 10));
        vbox.setMargin(buttonHbox, new Insets(5, 0, 0, 80));
        vbox.setMargin(titleLabel, new Insets(5, 0, 0, 100));
        vbox.setMargin(resultLabel, new Insets(5, 0, 0, 80));
         */

        VBox vboxol = new VBox(vbox);
        vboxol.setMargin(vbox, new Insets(10, 0, 0, 40));
        Scene scene = new Scene(vboxol, 230, 200);

        primaryStage.setTitle("Hello World!");
        primaryStage.setScene(scene);
        primaryStage.show();
    } // end start()


             public static int getInt(String inputNumber, Label resultLabel) {
        int amt = -1;
        inputNumber = inputNumber.trim();
        try {
            amt = Integer.parseInt(inputNumber);
            if (amt <= 0)
                throw new NumberFormatException();
        } catch (Exception ex) {
            resultLabel.setText("Enter an Integer > 0.");
        }
        return amt;}
        
    public static void main(String[] args) {
        launch(args);
    }

}
